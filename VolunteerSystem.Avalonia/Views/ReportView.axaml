<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VolunteerSystem.Avalonia.ViewModels"
             x:Class="VolunteerSystem.Avalonia.Views.ReportView"
             x:DataType="vm:ReportViewModel">
    <DockPanel Margin="20">
        <Button DockPanel.Dock="Top" Content="Back" Command="{Binding GoBackCommand}" Width="100" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Organization Statistics" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
            
            <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" Width="200"/>

            <StackPanel IsVisible="{Binding !IsLoading}" Spacing="15">
                <Border Background="#E3F2FD" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Total Opportunities Created" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Report.TotalOpportunities}" FontSize="24" Foreground="Blue"/>
                    </StackPanel>
                </Border>

                <Border Background="#E8F5E9" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Total Events Hosted" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Report.TotalEvents}" FontSize="24" Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFF3E0" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Total Applications Received" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Report.TotalApplications}" FontSize="24" Foreground="Orange"/>
                    </StackPanel>
                </Border>
                
                <Grid ColumnDefinitions="*, 10, *">
                    <Border Grid.Column="0" Background="#F3E5F5" CornerRadius="8" Padding="20">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Volunteers Present" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Report.TotalVolunteersPresent}" FontSize="24" Foreground="Purple"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="#FAFAFA" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="20">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Total Volunteer Hours" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Report.TotalHours}" FontSize="24" Foreground="Black"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
