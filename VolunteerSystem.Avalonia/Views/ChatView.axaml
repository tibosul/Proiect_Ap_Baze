<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VolunteerSystem.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="VolunteerSystem.Avalonia.Views.ChatView"
             x:DataType="vm:ChatViewModel">
    
    <DockPanel Margin="10">
        <Button DockPanel.Dock="Top" Content="Back" Command="{Binding GoBackCommand}" Margin="0,0,0,10"/>
        
        <Grid ColumnDefinitions="250, *">
            <!-- Left: Contacts List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0" Padding="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Contacts" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Email}" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right: Conversation -->
            <Grid Grid.Column="1" RowDefinitions="*, Auto" Margin="10,0,0,0">
                <!-- Messages List -->
                <ScrollViewer Grid.Row="0">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F0F8FF" CornerRadius="8" Padding="10" Margin="5" HorizontalAlignment="Left" MaxWidth="400">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Sender.Email}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input Area -->
                <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                    <TextBox Grid.Column="0" Text="{Binding NewMessageText}" Watermark="Type a message..."/>
                    <Button Grid.Column="1" Content="Send" Command="{Binding SendMessageCommand}" Margin="10,0,0,0" IsEnabled="{Binding !!SelectedContact}"/>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
