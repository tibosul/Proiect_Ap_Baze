<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VolunteerSystem.Avalonia.ViewModels"
             x:Class="VolunteerSystem.Avalonia.Views.OrganizerDashboardView"
             x:DataType="vm:OrganizerDashboardViewModel">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top" Spacing="20">
            <TextBlock Text="{Binding WelcomeMessage}" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding OrganizationName}" HorizontalAlignment="Center" FontSize="18" FontStyle="Italic"/>
            
            <Grid ColumnDefinitions="*, Auto">
                <Button Grid.Column="0" Content="Create New Opportunity" Command="{Binding CreateOpportunityCommand}" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Content="My Profile" Command="{Binding GoToProfileCommand}"/>
                    <Button Content="Chat" Command="{Binding GoToChatCommand}"/>
                    <Button Content="Logout" Command="{Binding LogoutCommand}" Foreground="Red"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <ListBox ItemsSource="{Binding Opportunities}" Margin="0,20,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,5">
                        <DockPanel>
                            <Button Content="Edit" 
                                    Command="{Binding $parent[UserControl].((vm:OrganizerDashboardViewModel)DataContext).EditOpportunityCommand}" 
                                    CommandParameter="{Binding}"
                                    DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding RequiredSkills}" />
                                
                                <!-- Display Events -->
                                <TextBlock Text="Dates:" FontWeight="Bold" Margin="0,5,0,0"/>
                                    <ItemsControl ItemsSource="{Binding Events}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="10,0,0,10">
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock Text="{Binding StartTime, StringFormat='• {0:dd MMM HH:mm}'}" FontWeight="Bold"/>
                                                    <TextBlock Text="-"/>
                                                    <TextBlock Text="{Binding EndTime, StringFormat='{}{0:HH:mm}'}"/>
                                                    <TextBlock Text="{Binding MaxVolunteers, StringFormat='(Cap: {0})'}" Foreground="Gray"/>
                                                </StackPanel>

                                                <!-- Applicants -->
                                                <TextBlock Text="Applicants:" FontStyle="Italic" Margin="20,0,0,0" 
                                                           IsVisible="{Binding !!Applications.Count}"/>
                                                <ItemsControl ItemsSource="{Binding Applications}" Margin="20,0,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                                <TextBlock Text="{Binding Volunteer.FullName}"/>
                                                                <TextBlock Text="{Binding Status, StringFormat='({0})'}" Foreground="Gray"/>
                                                                <TextBlock Text="{Binding Volunteer.Skills, StringFormat='- Skills: {0}'}" FontSize="10"/>
                                                                
                                                                <Button Content="Mark Present" FontSize="10"
                                                                        IsVisible="{Binding !IsPresent}"
                                                                        Command="{Binding $parent[UserControl].((vm:OrganizerDashboardViewModel)DataContext).MarkPresentCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        Background="#4CAF50" Foreground="White"/>
                                                                <TextBlock Text="✅ Present" FontSize="10" Foreground="Green" IsVisible="{Binding IsPresent}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
