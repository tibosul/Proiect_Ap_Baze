<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VolunteerSystem.Avalonia.ViewModels"
             x:Class="VolunteerSystem.Avalonia.Views.VolunteerDashboardView"
             x:DataType="vm:VolunteerDashboardViewModel">
    <UserControl.Styles>
        <Style Selector="TextBlock.error">
            <Setter Property="Foreground" Value="Red"/>
        </Style>
        <Style Selector="TextBlock.success">
            <Setter Property="Foreground" Value="Green"/>
        </Style>
    </UserControl.Styles>
    <Grid ColumnDefinitions="*, 300" Margin="20">
        <!-- Main Content -->
        <DockPanel Grid.Column="0" Margin="0,0,20,0">
            <StackPanel DockPanel.Dock="Top" Spacing="10">
                <Grid ColumnDefinitions="*, Auto">
                    <TextBlock Grid.Column="0" Text="{Binding WelcomeMessage}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                        <Button Content="My Applications" Command="{Binding GoToApplicationsCommand}"/>
                        <Button Content="My Profile" Command="{Binding GoToProfileCommand}"/>
                        <Button Content="Chat" Command="{Binding GoToChatCommand}"/>
                        <Button Content="ðŸ†" Command="{Binding GoToLeaderboardCommand}" ToolTip.Tip="Leaderboard"/>
                        <Button Content="Logout" Command="{Binding LogoutCommand}" Foreground="Red"/>
                    </StackPanel>
                </Grid>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           IsVisible="{Binding !!StatusMessage.Length}"
                           Classes.error="{Binding IsStatusMessageError}"
                           Classes.success="{Binding !IsStatusMessageError}"
                           HorizontalAlignment="Center" FontWeight="SemiBold"/>
                
                <!-- Search Bar -->
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBox Watermark="Search opportunities..." Text="{Binding SearchText}" Width="300"/>
                    <Button Content="Search" Command="{Binding SearchCommand}" Background="#2196F3" Foreground="White"/>
                    <Button Content="Clear" Command="{Binding ClearSearchCommand}" />
                </StackPanel>

                <!-- Recommendations -->
                <StackPanel IsVisible="{Binding RecommendedOpportunities.Count}">
                    <TextBlock Text="âœ¨ Recommended for You" FontSize="20" FontWeight="Bold" Margin="0,10,0,0" Foreground="#E91E63"/>
                    <ListBox ItemsSource="{Binding RecommendedOpportunities}" Margin="0,10,0,0" Height="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E91E63" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,5" Background="#FFF8E1">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Organizer.OrganizationName, StringFormat='By: {0}'}"/>
                                            <TextBlock Text="{Binding RequiredSkills, StringFormat='Matchers: {0}'}" FontStyle="Italic"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="View Details" Background="#E91E63" Foreground="White" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
    
                <TextBlock Text="Available Opportunities" FontSize="20" FontWeight="Bold" Margin="0,20,0,0"/>
            </StackPanel>
    
            <ListBox ItemsSource="{Binding Opportunities}" Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,5">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{Binding Location}" FontStyle="Italic"/>
                                    <TextBlock Text="|" />
                                    <TextBlock Text="{Binding RequiredSkills}" />
                                    <TextBlock Text="|" />
                                    <TextBlock Text="{Binding Points, StringFormat='Points: {0}'}" FontWeight="Bold" Foreground="Green"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Organizer.OrganizationName, StringFormat='Organized by: {0}'}" FontSize="12" Foreground="Gray"/>
                                
                                <!-- Events List -->
                                <TextBlock Text="Available Shifts:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <ItemsControl ItemsSource="{Binding Events}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F0F0F0" CornerRadius="4" Padding="5" Margin="0,2">
                                                <Grid ColumnDefinitions="*, Auto">
                                                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StartTime, StringFormat='{}{0:dd MMM}'}" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding StartTime, StringFormat='{}{0:HH:mm}'}"/>
                                                        <TextBlock Text="-"/>
                                                        <TextBlock Text="{Binding EndTime, StringFormat='{}{0:HH:mm}'}"/>
                                                    </StackPanel>
                                                    
                                                    <Button Grid.Column="1" Content="Apply" 
                                                            Command="{Binding $parent[UserControl].((vm:VolunteerDashboardViewModel)DataContext).ApplyToEventCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="#32CD32" Foreground="White"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <!-- Sidebar: Points History -->
        <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="15" Background="#FAFAFA" VerticalAlignment="Top">
            <StackPanel Spacing="10">
                <TextBlock Text="My Points" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Points}" FontSize="48" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                <TextBlock Text="Total Points" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
                
                <Separator Margin="0,10"/>
                
                <TextBlock Text="Recent History" FontSize="16" FontWeight="SemiBold"/>
                
                <ListBox ItemsSource="{Binding Transactions}" Height="400" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*, Auto" Margin="0,5">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding ReasonString}" FontSize="14"/> 
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd MMM HH:mm}'}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding Points, StringFormat='+{0}'}" FontWeight="Bold" Foreground="Green" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
